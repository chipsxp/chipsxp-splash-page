---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import logo from '../assets/images/chipsxp-research-logo.jpg';
import { navigationLinks, socialLinks } from '../consts/links';
---

<header>
	<nav>
		<h2>
	<a href="/">
		<Image src={logo} alt={SITE_TITLE} class="logo" />
	</a>
</h2>
		<div class="internal-links">
			{navigationLinks.map((link) => (
				<HeaderLink href={link.href}>{link.name}</HeaderLink>
			))}
		</div>
		<div class="social-links">
			{socialLinks.map((link) => (
				<a href={link.href} target="_blank">
					<span class="sr-only">{link.srText}</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d={link.icon}
						></path></svg
					>
				</a>
			))}
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgb(254, 254, 253);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		display: flex;
		align-items: center;
	}

	.logo {
		height: 100px;
		width: auto;
		display: block;
		padding: 0.5em 0;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links svg {
		transition: transform 0.3s ease, filter 0.3s ease;
	}
	.social-links a:hover svg {
		transform: scale(1.2);
		filter: drop-shadow(0 0 4px rgba(var(--accent), 0.4));
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
