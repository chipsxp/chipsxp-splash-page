---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
import logo from "../assets/images/chipsxp-research-logo.jpg";
import { navigationLinks, socialLinks } from "../consts/links";
import SearchBar from "./SearchBar.astro";
---

<header class="relative">
  <div class="absolute inset-0 bg-cover bg-center opacity-20 bkgimage"></div>
  <nav class="relative z-10">
    <h2>
      <a href="/">
        <Image src={logo} alt={SITE_TITLE} class="logo" />
      </a>
    </h2>
    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <svg
        class="menu-icon"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line class="top" x1="4" y1="6" x2="20" y2="6"></line>
        <line class="middle" x1="4" y1="12" x2="20" y2="12"></line>
        <line class="bottom" x1="4" y1="18" x2="20" y2="18"></line>
      </svg>
    </button>
    <div class="nav-overlay"></div>
    <div class="internal-links">
      {
        navigationLinks.map((link) => (
          <HeaderLink href={link.href}>{link.name}</HeaderLink>
        ))
      }
    </div>
    <div class="nav-group">
      <SearchBar />
      <div class="social-links">
        {
          socialLinks.map((link) => (
            <a href={link.href} target="_blank">
              <span class="sr-only">{link.srText}</span>
              <svg
                viewBox="0 0 16 16"
                aria-hidden="true"
                width="32"
                height="32"
              >
                <path fill="currentColor" d={link.icon} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: rgb(254, 254, 253);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    position: relative;
    overflow: hidden;
  }
  .bkgimage {
    background-image: url("../assets/images/chipsxp-research-logo.jpg");
    background-position: center 12%;
  }
  h2 {
    margin: 0;
    font-size: 1em;
    display: flex;
    align-items: center;
  }

  .logo {
    height: 140px;
    width: auto;
    display: block;
    padding: 0.5em 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding-top: 3.5rem;
  }

  .internal-links {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
    display: flex;
    align-items: center;
    height: 100%;
    transition: all 0.2s ease;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  nav a:hover {
    color: rgb(var(--accent));
  }

  .nav-group {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 721px) {
    .nav-group {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      top: 0.5rem;
    }
  }

  .social-links,
  .social-links a {
    display: flex;
  }
  .social-links svg {
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }
  .social-links a:hover svg {
    transform: scale(1.2);
    filter: drop-shadow(0 0 4px rgba(var(--accent), 0.4));
  }
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    position: relative;
    z-index: 50;
  }

  .mobile-menu-toggle .menu-icon {
    width: 24px;
    height: 24px;
    color: var(--black);
  }

  .mobile-menu-toggle .menu-icon line {
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
    transform-origin: center;
  }

  .mobile-menu-toggle.active .top {
    transform: translate(0, 6px) rotate(45deg);
  }

  .mobile-menu-toggle.active .middle {
    opacity: 0;
  }

  .mobile-menu-toggle.active .bottom {
    transform: translate(0, -6px) rotate(-45deg);
  }

  .nav-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 30;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nav-overlay.active {
    opacity: 1;
  }

  @media (max-width: 720px) {
    nav {
      padding-top: 0;
      flex-direction: column;
      align-items: center;
      gap: 0;
    }

    .mobile-menu-toggle {
      display: block;
      position: absolute;
      right: 1rem;
      top: 1.5rem;
    }

    .nav-group {
      position: static;
      transform: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      order: -1;
      margin: 1rem 0;
      width: 100%;
      max-width: 300px;
    }

    h2 {
      margin-top: 1rem;
    }

    .internal-links {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: rgba(254, 254, 253, 0.97);
      padding: 0;
      transform: translateY(-100%);
      transition: transform 0.3s ease;
      z-index: 40;
      box-shadow: 0 2px 8px rgba(var(--black), 5%);
      display: flex;
      flex-direction: column;
      gap: 0;
      margin-top: 0;
    }

    .internal-links.active {
      transform: translateY(0);
      top: 64px; /* Height of browser frame */
    }

    .internal-links a {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      font-size: 1.1rem;
      border-bottom: 1px solid rgba(var(--black), 0.1);
      width: 100%;
      text-align: center;
      transition: all 0.2s ease;
      height: 3.5rem;
      margin: 0;
    }

    .internal-links a:hover {
      background: rgba(var(--accent), 0.1);
    }

    .internal-links a:last-child {
      border-bottom: none;
    }

    .internal-links a.active {
      border-bottom: 1px solid rgba(var(--black), 0.1);
      background: rgba(var(--accent), 0.05);
    }

    nav {
      padding-right: 1rem;
    }

    .social-links {
      display: none;
    }

    .nav-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 30;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }

    .nav-overlay.active {
      opacity: 1;
      pointer-events: auto;
      display: block;
    }
  }
</style>

<script>
  const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
  const navOverlay = document.querySelector(".nav-overlay");
  const internalLinks = document.querySelector(".internal-links");

  function toggleMenu() {
    navOverlay?.classList.toggle("active");
    internalLinks?.classList.toggle("active");
    mobileMenuToggle?.classList.toggle("active");
  }

  mobileMenuToggle?.addEventListener("click", toggleMenu);
  navOverlay?.addEventListener("click", toggleMenu);
</script>
