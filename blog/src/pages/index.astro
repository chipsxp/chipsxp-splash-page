---
import { Image } from "astro:assets";
import { navigationLinks } from "../consts/links";
import chipsxpLogo from "../assets/images/chipsxp-research-logo.jpg";
import BaseHead from "../components/BaseHead.astro";

// Import category images
import bridgeGap from "../assets/images/bridge-the-gap-idea.png";
import technoField from "../assets/images/techno-field.jpg";
import userSupport from "../assets/images/user-support.jpg";
import happyWoman from "../assets/images/happy-woman-with-chipsxp.jpg";
---

<html lang="en">
  <head>
    <BaseHead
      title="ChipsXP - Research & Development"
      description="Explore ChipsXP's innovative research and development in bridging the technology gap. Discover our latest advances in technology and user-focused solutions."
    />
    <style>
      body {
        margin: 0 0 28px 0;
        padding: 0;
        min-height: 100vh;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          sans-serif;
        background: linear-gradient(135deg, #ff69b4, #87ceeb);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }

      .logo-container {
        text-align: center;
        margin: 2rem 0;
      }

      .logo {
        width: 250px;
        height: 250px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2.5rem;
        margin-top: 2rem;
      }

      .card {
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .card:hover {
        transform: translateY(-5px);
        border: #ff69b4;
        border-style: solid;
        border-width: 2px;
      }

      .card img {
        width: 100%;
        height: 325px;
        object-fit: cover;
      }

      .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(221, 235, 243, 0.814);
        padding: 1rem;
        color: white;
        text-align: center;
      }

      .card-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: bold;
      }

      @media (max-width: 768px) {
        .grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="logo-container">
        <Image
          src={chipsxpLogo}
          alt="ChipsXP Logo"
          class="logo"
          width={250}
          height={250}
        />
      </div>

      <div class="grid">
        <a href={navigationLinks[0].href} class="card">
          <Image src={bridgeGap} alt="Research" width={600} height={375} />
          <div class="card-overlay">
            <h2 class="card-title">{navigationLinks[0].name}</h2>
          </div>
        </a>

        <a href={navigationLinks[1].href} class="card">
          <Image src={technoField} alt="Advance" width={600} height={375} />
          <div class="card-overlay">
            <h2 class="card-title">{navigationLinks[1].name}</h2>
          </div>
        </a>

        <a href={navigationLinks[2].href} class="card">
          <Image
            src={userSupport}
            alt="About ChipsXP"
            width={600}
            height={350}
          />
          <div class="card-overlay">
            <h2 class="card-title">{navigationLinks[2].name}</h2>
          </div>
        </a>

        <a href={navigationLinks[3].href} class="card">
          <Image src={happyWoman} alt="Contact Devs" width={600} height={375} />
          <div class="card-overlay">
            <h2 class="card-title">{navigationLinks[3].name}</h2>
          </div>
        </a>
      </div>
    </div>
  </body>
</html>
